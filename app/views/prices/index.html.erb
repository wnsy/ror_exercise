<p id="notice"><%= notice %></p>

<h1>Prices</h1>
<div class="form-group">
	<%= form_tag stock_prices_path, :method => 'GET' do %>
	<%= text_field_tag 'id', nil,
	placeholder: 'Enter company ticker symbol', size: 50 %>
	<%= submit_tag 'Lookup Stock Price', class: 'btn btn-default' %>
</div>
<% end %>
<!-- Display price -->
  <% if @price %>
    <%= @price %>
  <% elsif @empty %>
    <%= @empty %>
  <% end %>

  <!-- Error handling if stock price doesn't exist  -->
  <% if @error %>
  <%= @error %>
  <% end %>


<table class="table">
  <thead>
    <tr>
			<th>id</th>
      <th>Ticker</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.id %></td>
				<td></td>
        <td><%= price.price %></td>
        <td><%= link_to 'Show', stock_price_path %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', stock_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

